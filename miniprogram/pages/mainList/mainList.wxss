/**index.wxss**/

page {
  background: #ffffff;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
}

.card {
  box-shadow: 0 4px 8px 0 rgba(0,0,0,0.2);
  transition: 0.3s;
  border-radius: 5rpx;
  margin: 10rpx;
  width: 730rpx;
}

.card image {
  width: 100%;
  border-radius: 5rpx 5rpx 0 0;
}

.card-title {
  padding: 2rpx 16rpx;
  float: left;
  width: 100%;
}
.card-subtitle {
  padding: 2rpx 16rpx;
  width: 100%;
}

.scroll-container {
  height: 100%;
  margin-bottom: 200rpx;
}