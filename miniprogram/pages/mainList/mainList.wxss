/**index.wxss**/

page {
  background: #ffffff;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
}

.card {
  box-shadow: 0 4px 8px 0 rgba(0,0,0,0.2);
  transition: 0.3s;
  border-radius: 5rpx;
  line-break: 0rpx;
  break-inside: avoid;
  box-sizing: border-box;
}
.mansory {
column-count: 2;
  column-gap: 10rpx;
  counter-reset: item-counter;
}

.card .img{
  border-radius: 5rpx 5rpx 0 0;
  margin-bottom: 2rpx;
  position: relative;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  box-sizing: border-box;
  width: 375rpx;
  height: 100%;
}

.card-title {
  padding: 2rpx 16rpx;
  float: left;
  font-size: 32rpx;
  
}
.card-subtitle {
  padding: 2rpx 16rpx;
  
}

.scroll-container {
  height: 100%;
  margin-bottom: 200rpx;
  
}