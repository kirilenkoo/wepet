.slide-image {
  width: 750rpx;
  height: 420rpx;

  
}

.title {
  color: black;
  font-size: 30rpx;
  display: block;
  padding: 10rpx 15rpx 5rpx 15rpx;
  line-height: 30rpx;
  height: 60rpx;
}
.fakeprice {
  color: gray;
  display: block;
  font-size: 18rpx;
  padding: 5rpx 15rpx 5rpx 15rpx;
  text-decoration:line-through;

}
.price {
  color: orange;
  display: block;
  font-size: 24rpx;
  padding: 5rpx 15rpx 5rpx 15rpx;
}

.content {
  color: grey;
  font-size: 24rpx;
  display: block;
  padding: 5rpx 15rpx 5rpx 15rpx;
}
.wiki {
  color: aqua;
  font-size: 20rpx;
  text-align: right;
  display: inline;
  padding: 5rpx 15rpx 5rpx 15rpx;
}

.card {
  box-shadow: 0 4rpx 6rpx 0 rgba(0, 0, 0, 0.2);
  transition: 0.3s;
  border-radius: 5rpx;
  margin: 10rpx 15rpx 10rpx 15rpx;
  width: 720rpx;
  height: 100rpx;
  display:flex;
  align-items: center;
  justify-content: flex-start;
}
.card .img{
  width: 100rpx;
  height: 100rpx;
}
.card .num{
  width: 100rpx;
  text-align: center;
}